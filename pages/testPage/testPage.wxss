}
.background-image {
    position: absolute; /* 使用绝对定位 */
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* 保持宽高比，填充容器 */
    z-index: -1; /* 将背景图置于所有内容的下方 */
}

.container {
  position: relative;
  top:200rpx;
  left:40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.scroll-view {
  width: 100%;
  /* 设定 scroll-view 的高度 */
  height: 1210rpx;
}

.item-container {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx; /* 方块之间的间隔 */
}

.item {
  width: 40%; /* 每行两个 */
  padding: 10rpx;
}

.box {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 370rpx; /* 每个方块的高度 */
    /* background-color: red; */
    border: 1rpx solid rgba(0, 0, 0, 0.2);
    border-radius: 22rpx;
    box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.3);
    flex-direction: column; /* 子元素按垂直方向排列 */
}

.item-image {
    width: 50%; /* 让图片宽度充满容器 */
    height: 200rpx; /* 设置图片的高度 */
    border-radius: 8rpx; /* 图片圆角 */
    margin-bottom: 10rpx; /* 图片和文字之间的间距 */
  }
  
.item-text {
    position: relative;
    font-size: 24rpx;
    font-weight: bold;
    color: #333;
    text-align: center; 
}

.faketabbar {
