.floating-view {
    position: fixed;   /* 固定在屏幕上，不受滚动影响 */
    top: 82vh; 
    left: 490rpx;            /* 固定在屏幕顶部，适当修改 */
    /* left: 800rpx;            固定在屏幕左侧，适当修改 */
    width: 208rpx;        /* 设置为全宽 */
    height: 70rpx;      /* 设置悬浮视图的高度 */
    background: linear-gradient(to right, #DAFFAD, #7DF612);
    color: black;       /* 文字颜色 */
    text-align: center;
    font-size: 24rpx;
    /* border: 1rpx solid rgba(0, 0, 0, 0.2); */
    border-radius: 52rpx;
    box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.2);
    line-height: 70rpx; /* 使文字垂直居中 */
    z-index: 9999;      /* 确保 z-index 最高 */
  }

  .floating-view2 {
    position: fixed;   /* 固定在屏幕上，不受滚动影响 */
    top: 77vh; 
    left: 490rpx;           
    width: 208rpx;       
    height: 70rpx;      
    background: linear-gradient(to right, #FFF2C8, #FFD500);
    color: black;   
    text-align: center;
    font-size: 24rpx;
    /* border: 1rpx solid rgba(0, 0, 0, 0.2); */
    border-radius: 52rpx;
    box-shadow: 0rpx 0rpx 10rpx rgba(0, 0, 0, 0.2);
    line-height: 70rpx; /* 使文字垂直居中 */
    z-index: 9999;      /* 确保 z-index 最高 */
  }

  /* 页面容器 */
.container-horizontal {
    position:relative;
    display: flex;
    justify-content: center;   /* 水平居中 */
    align-items: center;       /* 垂直居中 */
    height: 70vh;  
    top:15vh;
    /* background-color: red;  */
  }
  
  /* 水平滚动区域 */
  .scroll-view-horizontal {
    width: 100%;               /* 滚动视图宽度为屏幕宽度 */
    height: 100%;              /* 滚动视图高度为屏幕高度 */
    overflow: hidden;          /* 隐藏超出区域 */
    display: flex;
    justify-content: center;   /* 水平居中内容 */
  }
  
  /* 图片样式 */
  .plant-whole {
    width: 1280rpx;            /* 图片宽度 */
    height: 975rpx;            /* 图片高度 */
    object-fit: contain;       /* 保持图片比例 */
  }
  