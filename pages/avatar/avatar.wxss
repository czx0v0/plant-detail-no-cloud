/* pages/avatar/avatar.wxss */
.avatar-page {
  display: flex;
  flex-direction: column;
  overflow-x: hidden;
  overflow-y: scroll;
  justify-content: center;
  align-items: center;
}

.avatar-page .choose-avatar .avatar-canvas {
  width: 300rpx;
  height: 300rpx;
  /* border-radius: 30%; */
  /* overflow: hidden; */
  margin: 10px auto;
  z-index: 1000;
}

.choose-avatar {
  display: flex;
  flex-direction: column;
}

.avatar-wrapper {
  height: 350rpx;
  width: 350rpx;
  background-color: rgba(255, 255, 255, 0);
  z-index: 999;
  margin: 5px 10px;
  padding: 5px 10px;
}

.avatar {
  width: 256rpx;
  height: 256rpx;
  z-index: 999;
  padding: 0 0;
  margin: 0 0;
  background-color: rgba(red, green, blue, 0.01);
}

.weui-input {
  margin: 10px 50px;
  padding: 5px 20px;
  border-bottom: 1px solid #999;
  border-top: 1px solid #999;
  border-radius: 20px;
  z-index: 999;
}

.select-info {
  margin: 10px 10px;
  padding: 10px 10px;
  color: #666;
}

.nickname-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nickname {
  z-index: 999;
  margin: 10px 30px;
  padding: 10px 30px;
  font-size: 32px;
  color: #083517;
  font-weight: 1000;
  align-self: center;
}

.toDiyAvatarFrame {
  background: linear-gradient(to right, #7DF612, #DAFFAD);
  border-radius: 8px;
  height: 52px;
  line-height: 45px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-avatar-pic {
  background: linear-gradient(to right, #ffd608, #fff);
  border-radius: 8px;
  height: 52px;
  line-height: 45px;
  margin-top: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.history-container {
  display: flex;
  flex-direction: row;
  height: 30px;
  margin-top: 28vh;
  padding: 1%;
}

.history-img {
  width: 20px;
  height: 20px;
}

.history-text {
  font-size: 15px;
  color: #B6B6B6;
}

.background-view {
    overflow: hidden;  
    position: fixed;  
    top: 0;          
    left: 0;         
    width: 100vw;   
    height: 100vh;   
    background-color: white;
    z-index: -1; 
  }

  .background-image {
    width: 100vw;
    height: 100vh;
    object-fit: cover;
}


