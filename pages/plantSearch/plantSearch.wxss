  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .image-container {
    display: flex;
    justify-content: center; /* 居中图片 */
    align-items: center;
    height: 1000rpx; /* 页面高度为100% */
    width:100vw;
    object-fit: contain;
}

  .photo-preview {
     width: 100%;   /* 可以调整为适当的宽度 */
     height: 80%; /* 根据图片比例自适应 */
     margin-top: 20px;
     object-fit: contain;
     overflow: visible; 
     z-index: 100;
  }
  
  .upload-button {
    margin-top: 20px;
    background-color: #4caf50;
    color: white;
    padding: 30rpx 60rpx;
    border-radius: 5px;
    font-size: 18px;
  }


.icon {
    position: absolute; /* 绝对定位 */
    top: 50%; /* 距离容器顶部 50% */
    left: 50%; /* 距离容器左侧 50% */
    transform: translate(-50%, -50%); /* 平移以真正居中 */
    width: 412rpx;
    height: 412rpx;
}

.background-view {
    overflow: hidden;  
    position: fixed;  /* 固定定位 */
    top: 0;           /* 顶部对齐 */
    left: 0;          /* 左边对齐 */
    width: 100vw;      /* 宽度为全屏 */
    height: 100vh;     /* 高度为全屏 */
    background-color: blueviolet;
    z-index: -1;  /* 保证背景图在最底层 */
  }

  .background-image {
    width: 100%;
    height: 100%;
    object-fit: cover; /* 背景图片适应容器，保持比例并覆盖整个容器 */
  }
  
