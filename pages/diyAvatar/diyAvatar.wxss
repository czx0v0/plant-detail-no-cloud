.avatar-page .back-container .go-back {
  border: 0;
  font-size: 30px;
  z-index: 1000;
}

.avatar-page .back-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 55px;
  left: 5px;
  padding: 2px;
  margin: 2px;
  width: 130px;
  height: 35px;
  z-index: 1000;
}

.avatar-page .back-container .back-arrow {
  width: 30px;
  height: 30px;
}

.save-avatar-pic {
  background: linear-gradient(to right, rgba(218, 255, 173, 1), rgba(125, 246, 18, 1));
  border-radius: 8px;
  height: 52px;
  align-items: center;
  line-height: 52px;
  font-size: 16px;
  width: 327px;
  margin-top: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-page .avatar-canvas {
  width: 300rpx;
  height: 300rpx;
  /* border-radius: 30%; */
  /* overflow: hidden; */
  margin: 10px auto;
  z-index: 1000;
}

.canvas-diy-container {
  display: flex;
  flex-direction: column;
}

.avatar-page .canvas-diy-tab {
  display: flex;
  flex-direction: row;
  margin: 30px;
  font-size: 25px;
  color: #083517;
}

.avatar-page .canvas-diy-container .canvas-diy-tab .diy-tab-outer {
  padding: 10px;
  margin-right: 15px;
  width: 60px;
  height: 40px;
  text-align: center;
  line-height: 40px;

}
.active{
  background-color: rgba(255, 255, 255, 0.6);
  backdrop-filter: blue(5px);
  box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
  border-radius: 30px;
}

.avatar-page .canvas-diy-tab .diy-tab-inner {
  padding: 10px;
  margin-right: 10px;
  width: 60px;
  height: 40px;
  text-align: center;
  line-height: 40px;
}

.avatar-page .canvas-diy-tab .diy-tab-corner {
  padding: 10px;
  width: 100px;
  height: 40px;
  z-index: 999;
  text-align: center;
  line-height: 40px;
}

.diy-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10px 30px;
  overflow-x: scroll;
  align-items: center;
  justify-content: flex-start;
}

.diy-frames {
  width: 92px;
  height: 92px;
  margin-right: 10px;
  margin-bottom: 10px;
  border-radius: 11px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blue(5px);
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.5);
}
.frame-image{
  width: 70px;
  height: 70px;
  z-index: 1002;
}