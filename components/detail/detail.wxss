/* components/detail/detail.wxss */
.detail-mask {
  position: fixed;
  top: 154px;
  left: 34px;
  right: 34px;
  bottom: 10px;
  border-radius: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.7);
  z-index: 2;
  backdrop-filter: blur(5px);
  box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.3);
  pointer-events: none;
}

.detail-container {
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  overflow: hidden;
  position: flex;
  flex-direction: column;
}

.detail-header {
  height: 20%;
  display: flex;
  align-items: center;
  padding: 20rpx;

}

.detail-title {
  text-align: center;
  font-weight: 1500;
  color: #083517;
  font-size: 25px;
}

.detail-footer {
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  overflow: hidden;
  height: 13%;
}

.detail-body {
  padding: 15px;
  line-height: 25px;
  text-align: center;
  overflow-y: scroll;
  height: 53%;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail-content {
  padding: 20rpx;
  font-size: 15px;
}

.go-back {
  width: 55rpx;
  height: 55rpx;
  z-index: 999;
}

.add-emoji {
  padding: 3px;
  color: aqua;
  font-size: 30px;
}

.detail-image {
  width: 142px;
  height: 103px;
}

.header-emoji-icon {
  width: 30px;
  height: 30px;
}

.header-like-icon {
  width: 30px;
  height: 30px;
}

.header-left {
  display: flex;
  width: 55%;
}

.header-right {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header-right-bottom {
  display: flex;
  align-items: center;
  padding-top: 20%;
  height: 50%;
}

.header-right-up {
  height: 20%;
  align-items: center;
  justify-content: center;
}

.emoji-list {
  position: absolute;
  left: 25px;
  top: 160px;
  width: 150px;
  height: 100px;
  border: 3px solid #fff;
  background-color: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(5px);
  border-radius: 15px 0 15px 15px;
  display: flex;
  align-items: center;
  /* justify-content: center; */
  flex-wrap: wrap;
  overflow-y: scroll;
  z-index: 1000;
  padding: 5px;
}

.detail-back {
  height: 20px;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  padding: 10px 10px 0 0;
  margin: 0;
}

.light-plant {
  background: linear-gradient(to right, #7DF612, #DAFFAD);
  border-radius: 8px;
  height: 52px;
  line-height: 45px;
  align-self: center;
  justify-self: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-emoji-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header-emoji-count {
  background-color: #fbb0b0;
  height: 20px;
  width: 39px;
  border-radius: 10px 10px 0 10px;
  margin-right: 35px;
  color: #fff;
  font-size: 15px;
  text-align: center;
  line-height: 20px;
}

.header-heart-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header-heart-count {
  background-color: #fbb0b0;
  height: 20px;
  width: 39px;
  border-radius: 10px 10px 0 10px;
  margin-right: 35px;
  color: #fff;
  font-size: 15px;
  text-align: center;
  line-height: 20px;
}

.emoji-show-toggle {
  position: absolute;
  z-index: 1000;
  top: -50px;
  left: 0px;
}

.emoji-show-icon {
  width: 35px;
  height: 35px;
}

.fire {
  animation: fire-animation linear 1s infinite alternate;
}


.detail-mask .light-plant-show-container {
  width: 80%;
  height: 60%;
  background-color: rgba(255, 255, 255, 0.5);
  backdrop-filter: blur(5px);
  box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.3);
  border-radius: 20px;
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 5px 5px;
  margin: 5px 5px;
  z-index: 1005;
}

.detail-mask .light-plant-show-container .light-plant-image {
  scale: 50%;
}
.load-img{
  filter: grayscale(100%);
  animation: load-animation linear 1s infinite alternate;
}

.light-plant-text {
  animation: blink-animation  linear 1s infinite alternate;
  font-size: 20px;
}

.light-plant-button {
  background: linear-gradient(to right, #7DF612, #DAFFAD);
  border-radius: 10px;
  height: 40px;
  width: 60px;
  margin: 15px;
  font-size: 20px;
  align-self: center;
  justify-self: center;
  display: flex;
  align-items: center;
  justify-content: center;
}


@keyframes fire-animation {
  0% {
    opacity: 0.8;
    transform: translateY(2px);
    box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.2);
  }

  40% {
    opacity: 1;
    box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
  }

  60% {
    opacity: 1;
    box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
  }

  100% {
    opacity: 0.8;
    transform: translateY(2px);
    box-shadow: 2px 2px 15px rgba(0, 0, 0, 0.2);
  }
}

@keyframes load-animation {
  0% {
    opacity: 0.8;
    transform: translateY(3px);
  }
  20% {
    opacity: 1;
    transform: translateY(-3px);
  }
  40% {
    opacity: 1;
    transform: translateY(-3px);
  }

  100% {
    opacity: 0.8;
    transform: translateY(3px);
  }
}

@keyframes blink-animation {
  0% {
    opacity: 0.5;
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0.5;
  }
}